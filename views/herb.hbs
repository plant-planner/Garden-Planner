<div class="wrapper">
    <div class="herb-container single">
        <div class="herb-image"  style="background-image: url('{{herb.image}}')">
            <h2>{{herb.commonName}}</h2>
            <h4 class="sub-title">{{herb.latinName}}</h4>
        </div>


        <div class="description">
            <p>{{herb.description}}</p>
        </div>
        
        <div class="container-bottom">
          <h5>Minimal Temperature: {{herb.temperature.min}}</h5>
          <h5>Maximal Temperature: {{herb.temperature.max}}</h5>
          <h5>Optimal Temperature: {{herb.temperature.optimal}}</h5>
        </div>             
    </div>
</div>

